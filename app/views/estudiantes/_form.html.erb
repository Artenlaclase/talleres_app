<%= form_with(model: estudiante, class: "space-y-6") do |form| %>
  <% if estudiante.errors.any? %>
    <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
      <h2 class="font-bold mb-2"><%= pluralize(estudiante.errors.count, "error") %> impidió que se guardara:</h2>
      <ul class="list-disc pl-5">
        <% estudiante.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nombre, "Nombre del estudiante", class: "block font-semibold mb-1" %>
    <%= form.text_field :nombre, required: true, placeholder: "Ej. Ana Pérez", class: "w-full border border-gray-300 rounded px-3 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500" %>
    <% if estudiante.errors[:nombre].present? %>
      <p class="text-sm text-red-600 mt-1"><%= estudiante.errors[:nombre].first %></p>
    <% end %>
  </div>

  <div>
    <%= form.label :curso, "Curso/Grado", class: "block font-semibold mb-1" %>
    <%= form.text_field :curso, placeholder: "Ej. 2°A", class: "w-full border border-gray-300 rounded px-3 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500" %>
    <% if estudiante.errors[:curso].present? %>
      <p class="text-sm text-red-600 mt-1"><%= estudiante.errors[:curso].first %></p>
    <% end %>
  </div>

  <div>
    <%= form.label :taller_id, "Taller", class: "block font-semibold mb-1" %>
    <%= form.collection_select :taller_id, Taller.all, :id, :nombre,
        { prompt: "Seleccione un taller" },
        { class: "w-full border border-gray-300 rounded px-3 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500" } %>
    <% if estudiante.errors[:taller].present? || estudiante.errors[:taller_id].present? %>
      <p class="text-sm text-red-600 mt-1"><%= (estudiante.errors[:taller].presence || estudiante.errors[:taller_id]).first %></p>
    <% end %>
  </div>

  <div class="flex items-center gap-2">
    <%= form.submit (estudiante.new_record? ? "Crear Estudiante" : "Actualizar Estudiante"), class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
    <%= link_to "Cancelar", estudiantes_path, class: "px-4 py-2 rounded border border-gray-300 text-gray-700 hover:bg-gray-50" %>
  </div>
<% end %>
