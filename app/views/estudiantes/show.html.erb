          <div style="flex: 1;">
            <h3 style="font-size: 16px; font-weight: bold; margin-bottom: 4px; color: #1f2937;">
              <%= inscripcion.taller.nombre %>
            </h3>
            <p style="color: #6b7280; font-size: 14px; margin-bottom: 4px;"><%= truncate(inscripcion.taller.descripcion, length: 100) %></p>
            <p style="font-size: 12px; color: #9ca3af;">
              üìÖ <%= inscripcion.taller.fecha %> | üë• <%= inscripcion.taller.cupos_restantes %>/<%= inscripcion.taller.cupos %> cupos
            </p>
          </div>
          <div style="background: #92400e; color: white; border-radius: 6px; padding: 8px 12px; text-align: center; min-width: 100px; font-weight: 600; font-size: 13px;">
            En espera...
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

