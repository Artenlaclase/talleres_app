            <div style="font-size: 13px; color: #6b7280;">
              <span>üë• <%= taller.cupos_restantes %>/<%= taller.cupos %> cupos disponibles</span>
            </div>
          </div>
          <%= button_to "üìù Solicitar Inscripci√≥n", request_inscription_taller_path(taller), method: :post,
                style: "padding: 8px 16px; background: #10b981; color: white; border: none; border-radius: 6px; font-weight: 600; cursor: pointer; margin-left: 12px;" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
