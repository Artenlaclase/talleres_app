<p class="text-green-600"><%= notice %></p>

<div class="bg-white p-6 rounded shadow">
  <h1 class="text-3xl font-bold mb-4"><%= @estudiante.nombre %></h1>
  <div class="space-y-2">
    <p><strong>Curso:</strong> <%= @estudiante.curso %></p>
    <p><strong>Taller:</strong> <%= @estudiante.taller&.nombre %></p>
  </div>

  <div class="mt-6 space-x-4">
    <% if user_signed_in? && current_user.admin? %>
      <%= link_to "Editar", edit_estudiante_path(@estudiante),
            class: "px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600" %>
      <%= button_to "Eliminar", @estudiante, method: :delete,
            class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700" %>
    <%= link_to "Ingresar otro Estudiante", new_estudiante_path,
      class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
    <% end %>
    <%= link_to "Volver", estudiantes_path,
          class: "px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600" %>
  </div>
</div>
