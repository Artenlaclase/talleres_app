  <% if user_signed_in? && current_user.admin? %>
    <%= link_to "âœï¸ Editar Taller", edit_taller_path(@taller),
        style: "padding: 10px 16px; background: #f59e0b; color: white; border-radius: 6px; text-decoration: none; font-weight: 500;" %>
