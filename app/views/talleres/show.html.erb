<p class="text-green-600"><%= notice %></p>

<h1 class="text-3xl font-bold mb-4"><%= @taller.nombre %></h1>

<div class="space-y-4">
  <p><strong>Descripción:</strong> <%= @taller.descripcion %></p>
  <p><strong>Fecha:</strong> <%= @taller.fecha %></p>
  <p><strong>Cupos totales:</strong> <%= @taller.cupos %></p>
  <p><strong>Cupos disponibles:</strong> <%= @taller.cupos_restantes %></p>
</div>

<div class="mt-8">
  <h2 class="text-2xl font-semibold mb-3">Estudiantes inscritos</h2>
  <% if @taller.estudiantes.any? %>
    <ul class="list-disc ml-6 space-y-1">
      <% @taller.estudiantes.each do |e| %>
        <li><%= e.nombre %> — <span class="text-gray-600"><%= e.curso %></span></li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-600">No hay estudiantes inscritos aún.</p>
  <% end %>
  <% if user_signed_in? %>
    <div class="mt-4">
      <%= link_to "Ingresar Estudiante a este taller", new_estudiante_path(estudiante: { taller_id: @taller.id }),
          class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
    </div>
  <% end %>
</div>

<div class="mt-8 space-x-4">
  <%= link_to "Editar", edit_taller_path(@taller),
        class: "px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600" %>

  <%= link_to "Volver", talleres_path,
        class: "px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600" %>
  <% if user_signed_in? && current_user.admin? %>
    <%= link_to "Crear otro Taller", new_taller_path,
          class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  <% end %>
</div>
