<%= form_with(model: @taller, class: "space-y-6") do |form| %>
  <% if @taller.errors.any? %>
    <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
      <h2 class="font-bold mb-2"><%= pluralize(@taller.errors.count, "error") %> impidi√≥ que se guardara:</h2>
      <ul class="list-disc pl-5">
        <% @taller.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nombre, class: "block font-semibold mb-1" %>
    <%= form.text_field :nombre,
        class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div>
    <%= form.label :descripcion, class: "block font-semibold mb-1" %>
    <%= form.text_area :descripcion,
        class: "w-full border border-gray-300 rounded px-3 py-2", rows: 4 %>
  </div>

  <div>
    <%= form.label :fecha, class: "block font-semibold mb-1" %>
    <%= form.date_field :fecha,
        class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div>
    <%= form.label :cupos, class: "block font-semibold mb-1" %>
    <%= form.number_field :cupos,
        class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div>
    <%= form.submit class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  </div>

<% end %>
