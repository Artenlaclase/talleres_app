<h1 class="text-3xl font-bold mb-6">Listado de Talleres</h1>

<!-- Cards (mobile) -->
<div class="block md:hidden space-y-3">
  <% @talleres.each do |t| %>
    <div class="bg-white border border-gray-200 rounded-lg shadow p-4 text-sm">
      <div class="flex items-center justify-between mb-2">
        <h2 class="font-semibold text-gray-900"><%= t.nombre %></h2>
        <span class="text-xs text-gray-500"><%= t.fecha %></span>
      </div>
      <div class="grid grid-cols-3 gap-2 text-gray-700 mb-3">
        <div>
          <p class="text-xs text-gray-500">Cupos totales</p>
          <p class="font-medium"><%= t.cupos %></p>
        </div>
        <div>
          <p class="text-xs text-gray-500">Inscritos</p>
          <p class="font-medium"><%= t.estudiantes.count %></p>
        </div>
        <div>
          <p class="text-xs text-gray-500">Disponibles</p>
          <p class="font-medium"><%= t.cupos_restantes %></p>
        </div>
      </div>
      <div class="flex flex-wrap gap-3">
        <%= link_to "Ver", taller_path(t.id), class: "text-blue-600 hover:underline" %>
        <% if user_signed_in? && current_user.admin? %>
          <%= link_to "Editar", edit_taller_path(t.id), class: "text-yellow-600 hover:underline" %>
          <%= link_to "Eliminar", taller_path(t.id), method: :delete, data: { confirm: "¿Seguro?" }, class: "text-red-600 hover:underline" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="overflow-x-auto hidden md:block">
<table class="min-w-full bg-white border border-gray-200 rounded-lg overflow-hidden shadow text-sm md:text-base">
  <thead class="bg-gray-100 border-b">
    <tr>
      <th class="px-4 py-2 text-left font-semibold">Nombre</th>
      <th class="px-4 py-2 text-left font-semibold">Fecha</th>
      <th class="px-4 py-2 text-left font-semibold">Cupos totales</th>
      <th class="px-4 py-2 text-left font-semibold">Inscritos</th>
      <th class="px-4 py-2 text-left font-semibold">Disponibles</th>
      <th class="px-4 py-2 text-left font-semibold">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @talleres.each do |t| %>
      <tr class="border-b hover:bg-gray-50">
        <td class="px-4 py-2"><%= t.nombre %></td>
        <td class="px-4 py-2"><%= t.fecha %></td>
        <td class="px-4 py-2"><%= t.cupos %></td>
        <td class="px-4 py-2"><%= t.estudiantes.count %></td>
        <td class="px-4 py-2"><%= t.cupos_restantes %></td>

          <td class="px-4 py-2 space-x-3">
            <%= link_to "Ver", taller_path(t.id),
              class: "text-blue-600 hover:underline" %>
            <%= link_to "Editar", edit_taller_path(t.id),
              class: "text-yellow-600 hover:underline" %>
            <%= link_to "Eliminar", taller_path(t.id),
              method: :delete,
              data: { confirm: "¿Seguro?" },
              class: "text-red-600 hover:underline" %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="mt-6">
  <% if user_signed_in? %>
    <%= link_to "Crear nuevo taller", new_taller_path,
        class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  <% else %>
    <%= link_to "Inicia sesión para crear talleres", new_user_session_path,
        class: "px-4 py-2 rounded border border-gray-300 text-gray-700 hover:bg-gray-50" %>
  <% end %>
</div>
