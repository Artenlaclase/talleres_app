<!DOCTYPE html>
<html>
  <head>
    <title>Talleres App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-100 text-gray-900 font-inter min-h-screen flex flex-col">

    <!-- NAVBAR RESPONSIVE -->
    <nav class="bg-white shadow-md" data-controller="menu" data-turbo-permanent>
      <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <!-- Logo -->
        <h1 class="text-2xl font-bold text-blue-600">
          <%= link_to "TalleresApp", root_path %>
        </h1>

        <!-- Botón hamburguesa (solo móvil) -->
        <button id="menu-btn" data-menu-target="button" data-action="click->menu#toggle" class="md:hidden block rounded focus:outline-none focus:ring-2 focus:ring-indigo-500 cursor-pointer" aria-label="Abrir menú" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Abrir menú</span>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" class="h-8 w-8 text-gray-700" aria-hidden="true">
            <path d="M4 6h16M4 12h16M4 18h16" stroke-width="2" stroke-linecap="round" />
          </svg>
        </button>

        <!-- Links escritorio -->
        <div class="hidden md:flex space-x-6 text-lg">
          <%= link_to "Inicio", root_path, class: "hover:text-blue-600" %>
          <%= link_to "Talleres", talleres_path, class: "hover:text-blue-600" %>
          <%= link_to "Estudiantes", estudiantes_path, class: "hover:text-blue-600" %>
          <% if user_signed_in? && current_user.admin? %>
            <%= link_to "Nuevo Taller", new_taller_path, class: "hover:text-blue-600" %>
            <%= link_to "Nuevo Estudiante", new_estudiante_path, class: "hover:text-blue-600" %>
          <% end %>
          <% if user_signed_in? %>
            <%= link_to "Cerrar sesión", destroy_user_session_path, data: { turbo_method: :delete }, class: "hover:text-blue-600" %>
          <% else %>
            <%= link_to "Iniciar sesión", new_user_session_path, class: "hover:text-blue-600" %>
            <%= link_to "Registrarse", new_user_registration_path, class: "hover:text-blue-600" %>
          <% end %>
        </div>
      </div>

      <!-- Menú móvil -->
      <div id="mobile-menu" data-menu-target="mobile" class="hidden md:hidden bg-white border-t shadow-sm transition-all duration-200 ease-out">
        <div class="flex flex-col px-4 py-4 space-y-4 text-lg">
          <%= link_to "Inicio", root_path, class: "hover:text-blue-600" %>
          <%= link_to "Talleres", talleres_path, class: "hover:text-blue-600" %>
          <%= link_to "Estudiantes", estudiantes_path, class: "hover:text-blue-600" %>
          <% if user_signed_in? && current_user.admin? %>
            <%= link_to "Nuevo Taller", new_taller_path, class: "hover:text-blue-600" %>
            <%= link_to "Nuevo Estudiante", new_estudiante_path, class: "hover:text-blue-600" %>
          <% end %>
          <% if user_signed_in? %>
            <%= link_to "Cerrar sesión", destroy_user_session_path, data: { turbo_method: :delete }, class: "hover:text-blue-600" %>
          <% else %>
            <%= link_to "Iniciar sesión", new_user_session_path, class: "hover:text-blue-600" %>
            <%= link_to "Registrarse", new_user_registration_path, class: "hover:text-blue-600" %>
          <% end %>
        </div>
      </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main class="container mx-auto mt-8 px-4 flex-1 pb-24">
      <!-- Flash messages -->
      <div class="container mx-auto px-4 mt-4 space-y-2">
        <% if notice.present? %>
          <div class="rounded border border-green-600 bg-white p-4 text-green-600 flex items-center justify-between" data-controller="flash" data-flash-timeout-value="4000">
            <span><%= notice %></span>
            <button type="button" class="text-sm text-green-600 hover:underline" data-action="click->flash#dismiss">Cerrar</button>
          </div>
        <% end %>
        <% if alert.present? %>
          <div class="rounded border border-red-600 bg-white p-4 text-red-600 flex items-center justify-between" data-controller="flash" data-flash-timeout-value="6000">
            <span><%= alert %></span>
            <button type="button" class="text-sm text-red-600 hover:underline" data-action="click->flash#dismiss">Cerrar</button>
          </div>
        <% end %>
      </div>

      <%= yield %>
    </main>

    <!-- FOOTER -->
    <footer class="bg-white fixed bottom-0 left-0 w-full z-10 py-6 shadow-inner border-t border-gray-200">
      <div class="text-center text-gray-500">
        © <%= Time.now.year %> TalleresApp – Desarrollado por Raúl Rosales
      </div>
    </footer>

  </body>
</html>
