<!DOCTYPE html>
<html>
  <head>
    <title>TalleresApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-100 text-gray-800">

    <!-- NAVBAR -->
    <nav class="bg-blue-700 text-white px-8 py-4 shadow">
      <div class="flex justify-between items-center">
        <h1 class="text-xl font-bold">
          <%= link_to "Talleres App", root_path, class: "hover:text-blue-200" %>
        </h1>

        <div class="space-x-6">
          <%= link_to "Inicio", root_path, class: "hover:text-blue-300" %>
          <%= link_to "Talleres", talleres_path, class: "hover:text-blue-300" %>
          <% if user_signed_in? && current_user.admin? %>
            <%= link_to "Nuevo Taller", new_taller_path,
                  class: "px-3 py-1 bg-white text-blue-700 rounded hover:bg-blue-100" %>
          <% end %>
          <% if user_signed_in? %>
            <%= link_to "Salir", destroy_user_session_path, method: :delete,
                  class: "text-red-200 hover:text-red-100" %>
          <% else %>
            <%= link_to "Iniciar SesiÃ³n", new_user_session_path,
                  class: "px-3 py-1 bg-white text-blue-700 rounded hover:bg-blue-100" %>
          <% end %>
        </div>
      </div>
    </nav>

    <!-- CONTENIDO -->
    <main class="max-w-4xl mx-auto mt-10 bg-white p-8 shadow rounded">
      <%= yield %>
    </main>
  </body>
</html>
